<html>
	<head>
		<title>Home</title>
		@Styles.Render("~/Design/bootstrap.css")

	</head>
	<body>
		@Html.Partial("~/Views/Shared/header.cshtml")
	<!-- ------------------------------------------------------------------------------------------------------ -->
				<br/><br/><br/>
					<div class="row">
						<div class="col-sm-3 card" style="left:300px;border-style:none;">
						  <div class="card-body">
						  <h4 class="card-title">&nbsp;&nbsp;&nbsp;&nbsp;Sign Up</h4>
                  <form action="@Url.Action("MyAction", "Login")" method="get">
                      <div class="p-3 p-lg-5 border">
                          <div class="form-group row">
                              <div class="col-md-12">
                                  <label for="c_email" class="text-black">Name <span class="text-danger">*</span></label>
                                  <input type="text" class="form-control" id="signup_name" name="signup_name" placeholder="">
                              </div>
                          </div>
                          <div class="form-group row">
                              <div class="col-md-12">
                                  <label for="c_email" class="text-black">Email <span class="text-danger">*</span></label>
                                  <input type="email" class="form-control" id="signup_mail" name="signup_mail" placeholder="">
                              </div>
                          </div>
                          <div class="form-group row">
                              <div class="col-md-12">
                                  <label for="c_subject" class="text-black">Password </label>
                                  <input type="password" class="form-control" id="signup_password" name="signup_password">
                              </div>
                          </div>

                          <div class="form-group row">
                              <div class="col-md-12">
                                  <label for="c_subject" class="text-black">Confirm Password </label>
                                  <input type="password" class="form-control" id="singup_repass" name="singup_repass">
                              </div>
                          </div>

                          <div class="form-group row">
                              <div class="col-lg-12">
                                  <input type="submit" class="btn btn-primary btn-lg btn-block" value="Sign Up">
                              </div>
                          </div>
                      </div>
                  </form>
							
						  </div>
						</div>
						
						<div class="col-sm-3 card" style="left:400px;border-style:none;">
						  <div class="card-body">
						  <h4 class="card-title">&nbsp;&nbsp;&nbsp;&nbsp;Login</h4>
                  <form action="@Url.Action("confirmLogin", "Login")" method="post">
                      <div class="p-3 p-lg-5 border">

                          <div class="form-group row">
                              <div class="col-md-12">
                                  <label for="c_email" class="text-black">Email <span class="text-danger">*</span></label>
                                  <input type="email" class="form-control" id="login_email" name="login_email" placeholder="">
                              </div>
                          </div>
                          <div class="form-group row">
                              <div class="col-md-12">
                                  <label for="c_subject" class="text-black">Password </label>
                                  <input type="password" class="form-control" id="login_pass" name="login_pass">
                              </div>
                          </div>

                          <div class="form-group row">
                              <div class="col-lg-12">
                                  <input type="submit" class="btn btn-primary btn-lg btn-block" value="Login">
                              </div>
                          </div>
                      </div>
                  </form>							
						  </div>
						</div>
						
					</div>
				<br/><br/><br/>
		
	
	<!-- ------------------------------------------------------------------------------------------------------ -->	
		@Html.Partial("~/Views/Shared/footer.cshtml")
	</body>

</html>